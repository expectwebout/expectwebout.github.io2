    <script>
        function showDetail() {
            document.getElementById('detailContainer').style.display = 'block';
            document.querySelector('.container:not(.detail-container)').style.display = 'none';
        }
        function hideDetail() {
            document.getElementById('detailContainer').style.display = 'none';
            document.querySelector('.container:not(.detail-container)').style.display = 'block';
        }
    </script>
